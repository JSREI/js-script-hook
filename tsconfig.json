{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "sourceMap": true,
    "lib": ["es2016", "dom"],
    "types": ["tampermonkey"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
} 